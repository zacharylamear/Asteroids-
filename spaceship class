package Astr;

import java.awt.Rectangle;
import java.awt.Shape;
import java.awt.Polygon;
public class Ship{
	//make the ship
	private int[] shipx = {1, 3, 5}; //the x coordinates of the ship polygon
	private int[] shipy = {0, 7, 0}; //the y coordinates of the ship polygon
	
	private double velx, vely, locx, locy;
	boolean alive;
	private Shape shape;
	
	public Ship(){
		velx = 0;
		vely = 0;
		locx = 0;
		locy = 0;
		alive = true;
		Shape p = new Polygon(shipx, shipy, shipx.length);
		shape = p;
	}
	
	public void setVelX(double vel){velx = vel;}
	public void setVelY(double vel){vely = vel;}
	public void setLocX(double x){locx = x;}
	public void setLocY(double y){locy = y;}
	
	public double getVelX(){ return velx;}
	public double getVelY(){ return vely;}
	public double getLocX(){ return locx;}
	public double getLocY(){ return locy;}
	
	public Shape getShape(){
		return shape;
	}
	
	public Rectangle getBounds(){
		Rectangle r;
		r = new Rectangle((int) locx, (int) locy, 12, 12);
		return r;
	}
	
}
