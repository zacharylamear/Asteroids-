}
public void showscreen(){
	JFrame my_frame = new JFrame("Title");
	my_frame.setSize(framex,framey);
	my_frame.setVisible(true);
	
 JButton Title = new JButton();
 		Title.setVisible(true);
		Title.setBounds(0, 0, framex, framey);
