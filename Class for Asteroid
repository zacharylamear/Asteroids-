
import java.awt.Color;

public class asteroid {
	private int radius;
	private Color color;
	private int x;
	private int y;
	private int x_velocity;
	private int y_velocity;
	
	public asteroid(int radius, Color color){
		x_velocity = 10;
		y_velocity = 10;
		this.radius = radius;
		this.color = color;
	}
	
	public asteroid(){
		x_velocity = 10;
		y_velocity = 10;		
		this.radius = 50;
		this.color = Color.magenta;
	}
	public int getradius(){
		return radius;
	}
	public Color getColor(){
		return color;
	}
	public int getx(){
		return x;
	}
	public int gety(){
		return y;
	}
	public int getxvel(){
		return x_velocity;
	}
	public int getyvel(){
		return y_velocity;
	}
	public void setradius(int r){
		radius = r;
	}
	public void setColor(Color color){
		this.color = color;
	}
	public void setx(int x){
		this.x = x;
	}
	public void sety(int y){
		this.y = y;
	}
	public void setxvel(int xvel){
		x_velocity = xvel;
	}
	public void setyvel(int yvel){
		y_velocity = yvel;
	}
}
