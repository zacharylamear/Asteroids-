
import java.awt.Polygon;
import java.awt.Rectangle;



public class Asteroid extends Object{
	
	private int size;
	private int[] astx = {};
	private int[] asty = {};
	public Rectangle getBounds(){
		Rectangle r = new Rectangle((int)getX(), (int)getY(), 40, 40);
		return r;
	}
	
	public int getSize(){
		return size;
	}
	
	public void setSize(int size){
		this.size = size;
	}
	Rectangle r = new Rectangle(1,1,1,1);
	public Asteroid(){
		setAlive(true);
		setShape(new Polygon(astx, asty, astx.length));
		setSize(1);
	}
}
